{
	"$schema": "https://biomejs.dev/schemas/1.8.2/schema.json",
	"files": {
		"ignore": [
			"**/*.html",
			"**/*.css",
			"**/*.scss",
			".vscode/**",
			"dist/**",
			"node_modules/**",
			"public/**",
			"src/web/clients/**",
			"shims-vue.d.ts",
			"tsconfig.json",
			"vite.config.ts"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "error"
			},
			"style": {
				"noInferrableTypes": "off",
				"noNonNullAssertion": "off",
				"useImportType": "off"
			},
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 100,
		"lineEnding": "crlf"
	},
	"organizeImports": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "always",
			"bracketSameLine": true,
			"bracketSpacing": true,
			"quoteProperties": "asNeeded",
			"quoteStyle": "single",
			"semicolons": "always",
			"trailingCommas": "all"
		},
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	},
	"json": {
		"formatter": {
			"trailingCommas": "none"
		}
	},
	"css": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"overrides": [
		{
			"include": ["*.vue"],
			"linter": {
				"rules": {
					"correctness": {
						"noUnusedImports": "off"
					},
					"style": {
						"useImportType": "off"
					}
				}
			}
		}
	]
}
