<?xml version="1.0" encoding="UTF-8"?>

<Form title="Weather Experience">
  <Section title="General Information">
    <Question id="name" label="Name">
      <TextBox>
        <Validators>
          <RequiredValidator/>
        </Validators>
      </TextBox>
    </Question>
    <Question id="description" label="Description">
      <TextBox>
        <Validators>
          <RequiredValidator/>
        </Validators>
      </TextBox>
    </Question>
    <Question id="startTime" label="Start Time">
      <DateTimePicker>
        <Validators>
          <RequiredValidator/>
        </Validators>
      </DateTimePicker>
    </Question>
    <Question id="endTime" label="End Time" enabled="false">
      <DateTimePicker/>
    </Question>
  </Section>
  <Section title="Statistics">
    <Question id="damageCost" label="Damage Cost" enabled="false">
      <TextBox/>
    </Question>
    <Question id="fatalities" label="Fatalities" enabled="false">
      <TextBox/>
    </Question>
  </Section>
</Form>
